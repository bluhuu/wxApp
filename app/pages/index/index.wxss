@import "/style/hh.wxss";
.container { background-color: #f2f2f2; }
/*轮播*/
.swiper_box { height: 187.5px; }
swiper.swiper { height: 100%; }
.swiper-item { display: block; height: 100%; }
.slide-image { height: 100%; width: 100%; display: inline-block; overflow: hidden; }

/*分类*/
.index-nav {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    background-color: #fff;
    color: #646464;
    margin-top: 15px;
    border-top: 1px solid #d4d4d4;
}
.index-nav view {
    flex: 1 0 auto;
    width: 180rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    flex-direction: column;
}

.index-nav .nav-image { width: 38px; height: 38px; }
.index-nav text { font-size: .8em; padding-top: .3em; }
.index-nav .additionImage { width: 26px; height: 11px; left:50px;top:4px;}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 0px;
    font-size: 15px;
    color: #656565;
    background-color: #fff;
    border-bottom: 1px solid #d4d4d4;
    margin-top: 25rpx;
    margin-bottom: 20rpx;
    justify-content: space-between;
}
view.text text { margin-left: 10px; line-height: 18px; }
view.text image { width: 12rpx; height: 21rpx; }

.item{ margin-bottom: 7px; display: flex; flex-flow: column wrap; }
.QRC-image { height: 50rpx; width: 50rpx; display: inline-block; overflow: hidden; }
