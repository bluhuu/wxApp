<!--导航nav组件 -->
<template name="seachbar">
        <form bindsubmit="formSubmit">
            <view class="search-bar">
                <view class="rel">
                    <text class="search-ico"></text>
                    <input class="search-txt" placeholder-class="search-txt-plc" placeholder="请输入关键词搜索" type="text" name="searchvalue" value="{{productList.params.name}}" bindinput="searchinput" bindfocus="searchfocus" bindconfirm="searchconfirm" auto-focus />
                    <!-- <text class="search-close"></text> -->
                    <image catchtap="searchclose" class="{{!productList.params.name?'dn':'xx'}} search-close"  src="data:image/png;base64,"></image>
                </view>
                <button formType="submit" size="mini" classs="searchbtn" style="margin-left:13rpx; padding-left:25rpx;padding-right:25rpx;background-color:#3cb9bb;color:#fff;border-radius:10rpx;border-color:#3cb9bb;">搜索</button>
            </view>
        </form>
</template>
