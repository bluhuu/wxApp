<view class="index">
    <view class="head bgwh fx fdr faice fjcce bb11">
        <image class="userinfo-avatar mr30" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <view class="userifo fx fdc">
            <view class="fx fdr fjcsb mb10 mt10">
                <text class="userName b">{{user.userName}}</text>
                <text class="userGender b">{{user.userGender}}</text>
            </view>
            <view class="userPhone">{{user.userPhone}}</view>
        </view>
    </view>

    <view class="body">
        <view class="widgets bt12">
            <block wx:for-items="{{list}}">
                <view class="widgets__item bb11">
                    <view id="{{item.id}}" class="widgets__info fjcsb {{item.open ? 'widgets__info_show' : ''}}" bindtap="widgetsToggle">
                        <view class="fx faice"><image class="widgets-img mr10" src="{{item.img}}" mode="aspectFit" /><text class="widgets__info-name">{{item.name}}</text></view>
                        <image class="widgets__info-img" src="/assets/images/arrowright.png" mode="aspectFill" />
                    </view>
                    <view class="widgets__list {{item.open ? 'widgets__list_show' : ''}}">
                        <block wx:for-items="{{item.pages}}" wx:for-item="page">
                            <view class="family-member fx fjcsb p10 pl20 pr20 f14">
                                <text class="member-name">{{page}}</text>
                                <view><text class="member-edit mr20" id="member-edit-ID" bindtap="memberedit">编辑</text><text class="member-lookup">查看</text></view>
                            </view>
                        </block>
                        <view style="text-align:center;"><image style="height:50rpx;width:50rpx;padding:15rpx;" src="/assets/images/personal-21.png" mode="aspectFill" /></view>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>
