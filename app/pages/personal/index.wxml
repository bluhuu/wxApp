<view class="index">
    <view class="head bgwh fx fdr faice fjcce bb11">
        <image class="userinfo-avatar mr20" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <view class="userifo fx fdc">
            <view class="fx fdr fjcsb mb10 mt10"><text class="userName b">{{user.userName}}</text><text class="userGender b">{{user.userGender}}</text></view>
            <view class="userPhone">{{user.userPhone}}</view>
        </view>
    </view>

    <view class="body">
        <view class="widgets bt12">
            <block wx:for-items="{{list}}">
                <view class="widgets__item bb11">
                    <view id="{{item.id}}" class="widgets__info {{item.open ? 'widgets__info_show' : ''}}" bindtap="widgetsToggle">
                        <view class="fx faice"><image class="widgets-img mr10" src="{{item.img}}" mode="aspectFit" /><text class="widgets__info-name">{{item.name}}</text></view>
                        <image class="widgets__info-img" src="/image/arrowright.png" mode="aspectFill" />
                    </view>
                    <view class="widgets__list {{item.open ? 'widgets__list_show' : ''}}">
                        <block wx:for-items="{{item.pages}}" wx:for-item="page">
                            <navigator url="personal-pages/{{page}}/{{page}}" class="widget">
                                <text class="widget__name">{{page}}</text>
                                <image class="widget__arrow" src="/image/arrowright.png" mode="aspectFill" />
                                <view class="widget__line {{index == 0 ? 'widget__line_first' : ''}}"></view>
                            </navigator>
                        </block>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>
